// @src/components/Header.astro (VERSIÓN 5.2 - Corrección Tipado TS-7053)
import { getEntry } from 'astro:content';

// --- Carga de datos del CMS ---
const contacto = await getEntry('informacion-de-contacto', 'general');
const ajustes = await getEntry('ajustes', 'home');
const home = await getEntry('pages', 'home');

const c = contacto?.data ?? {};
const brandName = ajustes?.data.brand_name ?? 'Logo';
const homeData = home?.data ?? {};

// --- Lógica de WhatsApp (Sin cambios) ---
const waNumber = c.whatsapp ?? '';
const waMsg = encodeURIComponent(c.whatsapp_message ?? 'Hola, quiero cotizar un proyecto'); 
const waHref = waNumber ?
`https://wa.me/${waNumber}?text=${waMsg}` : null;

// --- LÓGICA MEJORADA: Enlaces base y filtrado dinámico ---
const allLinks = [
  { href: "/#inicio", text: "Inicio", key: "hero" }, // 'inicio' usa la key 'hero'
  { href: "/#nosotros-productos", text: "Nosotros", key: "nosotros" }, // ACTUALIZADO: Apunta a la nueva sección fusionada
  { href: "/proyectos", text: "Proyectos", key: "proyectos_page" }, // 'proyectos' es una página, no una sección del home
  { href: "/#lo-ultimo", text: "Proyectos", key: "proyectos" }, // ACTUALIZADO: Apunta a la sección Proyectos del Home
  { href: "/#clientes", text: "Clientes", key: "clientes" },
];

const navLinks = allLinks.filter(link => {
  // Si no es un ancla del home (ej. /proyectos), siempre mostrar
  if (!link.href.startsWith('/#')) {
    return true;
  }

  // Si es un ancla del home (ej. 'nosotros')
  // CORRECCIÓN V8.2: Forzar 'any' para la indexación dinámica de claves.
  const sectionConfig = (homeData as any)[link.key];

  // Si la sección no existe en el CMS, o no tiene 'show_section', mostrar por defecto
  if (!sectionConfig || typeof sectionConfig.show_section !== 'boolean') {
    return true; 
  }
  
  // Ocultar solo si show_section es explícitamente 'false'
  return sectionConfig.show_section;
});
