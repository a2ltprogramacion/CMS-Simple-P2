---
// @src/pages/proyectos.astro (VERSIÓN 8.0 - Contenido 100% CMS)
import { getCollection, getEntry } from 'astro:content'; // getEntry
import Layout from '../layouts/Layout.astro';
import ProjectCardV4 from '../components/ProjectCardV4.astro';
import FeaturedProject from '../components/FeaturedProject.astro'; 

// NUEVO (Req #2): Cargar contenido de la página
const pageContent = await getEntry('pages', 'proyectos');
const pageData = pageContent?.data ?? {};

// Cargar Proyectos (Lógica existente)
const allProjects = await getCollection('proyectos');
// @ts-ignore
const sortedProjects = allProjects.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const featuredProject = sortedProjects[0];
const otherProjects = sortedProjects.slice(1);

// NUEVO (Req #2): Fallbacks para contenido CMS
const seoTitle = pageData.title ?? "Nuestros Proyectos";
const seoDesc = pageData.description ?? "Un vistazo a todos los proyectos que hemos realizado.";
const h1 = pageData.h1 ?? "Nuestros Proyectos";
const h2_reciente = pageData.h2_reciente ?? "Proyecto Reciente";
const h2_archivo = pageData.h2_archivo ?? "Archivo de Proyectos";
---

{/* CORREGIDO (Req #2): SEO Dinámico */}
<Layout title={seoTitle} description={seoDesc}>
  
  <header 
    id="header-proyectos" 
    class="relative h-56 sm:h-80 flex items-center justify-center text-center text-text-inverted"
  >
    <div 
      class="absolute top-0 left-0 w-full h-full bg-cover bg-center" 
      style="background-image: url('/assets/uploads/proyectos.png');"
    ></div>
    
    <div class="absolute top-0 left-0 w-full h-full bg-primary opacity-80"></div>
  
    <div class="relative z-10 px-8 animate-fade-in-up">
      {/* CORREGIDO (Req #2): H1 Dinámico */}
      <h1 class="text-4xl md:text-5xl font-serif font-bold text-white pt-20">
        {h1}
      </h1>
      {/* (Descripción eliminada del header, ahora solo en SEO) */}
    </div>
  </header>
  
  <section class="py-20 px-8 bg-secondary">
    <div class="container mx-auto">
      <div class="max-w-7xl mx-auto">
        
        {featuredProject && (
          <div class="mb-16">
            {/* CORREGIDO (Req #2): H2 Dinámico */}
            <h2 class="text-3xl font-serif font-bold text-white mb-6 text-center lg:text-left">
              {h2_reciente}
            </h2>
            <FeaturedProject project={featuredProject} />
          </div>
        )}
        
        {otherProjects.length > 0 && (
          <div>
            {/* CORREGIDO (Req #2): H2 Dinámico */}
            <h2 class="text-3xl font-serif font-bold text-white mb-6 text-center lg:text-left">
              {h2_archivo}
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 text-left">
              {otherProjects.map(project => (
                <ProjectCardV4 project={project} />
              ))}
            </div>
          </div>
        )}

      </div>
    </div>
  </section>
</Layout>