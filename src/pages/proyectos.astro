---
// @src/pages/proyectos.astro (VERSIÓN 5.7 - Layout Editorial)
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import ProjectCardV4 from '../components/ProjectCardV4.astro';
import FeaturedProject from '../components/FeaturedProject.astro'; // Importar nuevo componente

const allProjects = await getCollection('proyectos');
// @ts-ignore
const sortedProjects = allProjects.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

// --- NUEVA LÓGICA DE LAYOUT EDITORIAL ---
// 1. El proyecto más reciente es el "Destacado"
const featuredProject = sortedProjects[0];
// 2. El resto son el "Archivo"
const otherProjects = sortedProjects.slice(1);
---

<Layout title="Nuestros Proyectos | A2LT" description="Un vistazo a todos los proyectos que hemos realizado.">
  
  {/* El Header se mantiene igual, con la nueva paleta */}
  <header 
    id="header-proyectos" 
    class="relative h-56 sm:h-80 flex items-center justify-center text-center text-text-inverted"
  >
    <div 
      class="absolute top-0 left-0 w-full h-full bg-cover bg-center" 
      style="background-image: url('/assets/uploads/proyectos.png');"
    ></div>
    
    {/* Capa Oscura (Color Primario/Azul Pizarra) */}
    <div class="absolute top-0 left-0 w-full h-full bg-primary opacity-80"></div>
  
    <div class="relative z-10 px-8 animate-fade-in-up">
      <h1 class="text-4xl md:text-5xl font-serif font-bold text-white pt-20">
        Nuestros Proyectos
      </h1>
      <p class="text-lg md:text-xl max-w-2xl mx-auto mt-4 text-white/90 font-sans">
        Un vistazo a los casos de éxito que hemos construido.
      </p>
    </div>
  </header>
  
  {/* --- INICIO DEL NUEVO LAYOUT (V5.7) --- */}
  <section class="py-20 px-8 bg-secondary">
    <div class="container mx-auto">
      <div class="max-w-7xl mx-auto">
        
        {/* 1. SECCIÓN: PROYECTO DESTACADO */}
        {featuredProject && (
          <div class="mb-16">
            <h2 class="text-3xl font-serif font-bold text-primary mb-6 text-center lg:text-left">
              Proyecto Reciente
            </h2>
            <FeaturedProject project={featuredProject} />
          </div>
        )}
        
        {/* 2. SECCIÓN: ARCHIVO DE PROYECTOS */}
        {otherProjects.length > 0 && (
          <div>
            <h2 class="text-3xl font-serif font-bold text-primary mb-6 text-center lg:text-left">
              Archivo de Proyectos
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 text-left">
              {otherProjects.map(project => (
                <ProjectCardV4 project={project} />
              ))}
            </div>
          </div>
        )}

      </div>
    </div>
  </section>
  {/* --- FIN DEL NUEVO LAYOUT (V5.7) --- */}
</Layout>